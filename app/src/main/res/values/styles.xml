<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>


    <style name="MovieTitleStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="MovieSubTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="MovieDescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MovieDetailsCategoryStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="HyperLinkStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>


    <style name="SmallHyperLinkStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/almost_transparent</item>
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ProgressBarStyle" parent="AppTheme">
        <item name="android:progressTint">@color/dark_red</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="colorAccent">@color/dark_red</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/dark_red</item>
    </style>

    <style name="SplashProgressBarStyle" parent="AppTheme">
        <item name="android:progressTint">@color/dark_blue</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/dark_blue</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:backgroundTint">@color/light_yellow</item>
        <item name="android:progressTint">@color/light_yellow</item>
        <item name="android:secondaryProgressTint">@color/light_yellow</item>
        <item name="colorControlActivated">@color/white_40</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallRatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:backgroundTint">@color/light_yellow</item>
        <item name="android:progressTint">@color/light_yellow</item>
        <item name="android:secondaryProgressTint">@color/light_yellow</item>
        <item name="colorControlActivated">@color/white_40</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashTitleStyle">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:fontStyle">italic</item>
    </style>


    <style name="HeaderViewTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="MovieRatingTitleStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MovieDetailsSubTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MovieShareStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="SearchQueryTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/dark_red</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/edit_text_background_selector</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

</resources>
